{
  "name": "lucyjs",
  "version": "0.1.0",
  "description": "A node js binding for Apache Lucy.",
  "main": "lib/index.js",
  "scripts": {
    "start": "node lib/lucy.js",
    "test": "./node_modules/.bin/jest",
    "test-watch": "./node_modules/.bin/jest --watch",
    "docs": "./node_modules/.bin/jsdoc -c jsdoc-config.json --verbose"
  },
  "author": "Ethan Mahintorabi",
  "license": "MIT",
  "dependencies": {
    "bindings": "^1.3.0",
    "nan": "^2.7.0"
  },
  "gypfile": true,
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "jest": "^21.2.1",
    "jsdoc": "^3.5.5",
    "jsdoc-prevent-comment-parse-plugin": "^1.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/src/"
    ],
    "testEnvironment": "node",
    "forceExit": true,
    "clearMocks": true,
    "cache": false
  }
}
